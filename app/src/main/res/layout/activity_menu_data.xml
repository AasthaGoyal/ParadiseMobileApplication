<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuDataActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:background="#F70A3C"
        android:gravity="center"
        android:text="Services"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnBuffet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#0A64F7"
        android:text="Buffet"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnDineIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#0AC8F7"
        android:text="Dine In"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnTakeaway"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#0AF0F7"
        android:text="Takeaway"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnCatering"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#0AF78F"
        android:text="Catering"
        android:textSize="18sp" />
</LinearLayout>