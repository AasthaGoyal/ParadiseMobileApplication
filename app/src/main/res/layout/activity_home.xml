<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/btnServices"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_margin="5dp"
                android:background="#820707"
                app:srcCompat="@android:drawable/btn_star_big_on"
                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="44dp" />

            <TextView
                android:id="@+id/txtServices"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:fontFeatureSettings="#000000"
                android:gravity="center"
                android:text="Services"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/btnSpecials"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#00cc00"
                app:srcCompat="@android:drawable/ic_menu_today"
                tools:layout_editor_absoluteX="282dp"
                tools:layout_editor_absoluteY="44dp" />

            <TextView
                android:id="@+id/txtServices2"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:fontFeatureSettings="#000000"
                android:gravity="center"
                android:text="Specials"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/btnCareers"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#0f00ea"
                app:srcCompat="@android:drawable/stat_notify_sdcard_usb"
                tools:layout_editor_absoluteX="164dp"
                tools:layout_editor_absoluteY="44dp" />


            <TextView
                android:id="@+id/txtServices3"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:fontFeatureSettings="#000000"
                android:gravity="center"
                android:text="Careers"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/btnContactUs"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#000000"
                app:srcCompat="@android:drawable/ic_menu_call"
                tools:layout_editor_absoluteX="282dp"
                tools:layout_editor_absoluteY="150dp" />

            <TextView
                android:id="@+id/txtServices4"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:fontFeatureSettings="#000000"
                android:gravity="center"
                android:text="Contact Us"
                android:textSize="18sp" />


            <ImageButton
                android:id="@+id/btnAboutUs"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#642809"
                app:srcCompat="@android:drawable/ic_menu_info_details"
                tools:layout_editor_absoluteX="164dp"
                tools:layout_editor_absoluteY="150dp" />


            <TextView
                android:id="@+id/txtServices5"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:fontFeatureSettings="#000000"
                android:gravity="center"
                android:text="About Us and Developer"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/btnFeatures"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#6E0AF7"
                app:srcCompat="@android:drawable/ic_menu_view" />

            <TextView
                android:id="@+id/txtServices6"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:fontFeatureSettings="#000000"
                android:gravity="center"
                android:text="Features"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>